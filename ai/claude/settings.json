{
  "alwaysThinkingEnabled": false,
  "permissions": {
    "allow": [],
    "deny": ["Bash(rm -rf:*)", "Bash(rm -fr:*)"]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx \"$HOME/.claude/hooks/notification-desktop.ts\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
