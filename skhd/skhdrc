cmd + ctrl - r : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "fcmd ~/.cmds"
cmd + ctrl - a : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "fapp"
cmd + ctrl - q : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "fkill"
cmd + ctrl - f : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "fm"
cmd + ctrl - p : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "fpass"
cmd + ctrl - o : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "fopen"
cmd + ctrl - j : open -a AlacrittyPopup --args --config-file=$HOME/.config/alacritty-popup.yml -e zsh -ci "k9s"

# focus window
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

# float / unfloat window and center on screen
ctrl + alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# rotate window tree
ctrl + alt - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
ctrl + alt - f : yabai -m window --toggle zoom-fullscreen

# stack window
ctrl + alt - s : yabai -m window --stack next
ctrl + alt + shift - s : $HOME/Workspace/dotfiles/yabai/scripts/toggle_stack.sh

# equalize size of windows
ctrl + shift + alt - e : yabai -m space --balance

# resize windows
ctrl + shift + alt - h : yabai -m window --resize left:-50:0; \
                         yabai -m window --resize right:-50:0
ctrl + shift + alt - j : yabai -m window --resize bottom:0:50; \
                         yabai -m window --resize top:0:50
ctrl + shift + alt - k : yabai -m window --resize bottom:0:-50; \
                         yabai -m window --resize top:0:-50
ctrl + shift + alt - l : yabai -m window --resize right:50:0; \
                         yabai -m window --resize left:50:0

# kill window
ctrl + alt + shift - return : $(yabai -m window $(yabai -m query --windows --window | jq -re ".id") --close)
